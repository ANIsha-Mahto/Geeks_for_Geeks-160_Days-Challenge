class Solution {
  public:
    int maxLen(vector<int> &arr) {
        unordered_map<int,int>sumIndex;
        int sum=0;
        int maxLen=0;
        sumIndex[0]=-1;
        for(int i=0;i<arr.size();i++){
            sum+=(arr[i]==0)?-1:1;
            if(sumIndex.find(sum)!=sumIndex.end()){
                maxLen=max(maxLen,i-sumIndex[sum]);
            }else{
                sumIndex[sum]=i;
            }
        }
        return maxLen;
    }
};
